

<div id="c_post_<%= comment.id%>" class="comment-card">


    <div class="d-flex justify-content-between">
        <div class="tags-custome">
                Posted By :  <%= comment.user.email%>
        </div>
      

       <div class="d-flex ">
            <div>
                    Posted At :  
            </div>
            <%= time_ago_in_words(comment.updated_at).capitalize()%>
        </div>
        
     </div>
    
        <div class="mt-2">
           <div class="tags-custome"> Comment </div>  <%= comment.content%>
        </div>
   
    <div class="d-flex">
       <div class="mr-2 btn btn-primary w-100 mt-2" > <a style="color:white" href="<%=post_path(comment.post.id)%>">View Post</a></div>
    </div>
</div>
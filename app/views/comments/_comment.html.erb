<div>

  <div class="p-3">
    <div class="">
      <div class="d-flex flex-start align-items-center ">
        <img class="rounded-circle shadow-1-strong me-3 mr-2"
          src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60" height="60" />
        <div>
          <h6 class="fw-bold text-primary mb-1">Lily Coleman</h6>
          <p class="text-muted small mb-0">
            Jan 2020
          </p>
        </div>
      </div>

      <p class="mt-3 mb-4 pb-2">
        <%= comment.content%>
      </p>
    </div>
    </section>
    <%=render partial: "likes/likeBtn", locals:{likeable:comment}%>
    <div>
      <div class="d-inline">
        <%= form_with(model: @post, local: false) do |form| %>
        <div class="field d-inline">
          <%= form.label :status %>
          <%= form.select :status, Report.report_statuses%>
        </div>
        <div class="actions d-inline">
          <%= form.submit "Report Comment", :class=>"btn btn-primary h-13 " %>
        </div>
        <%end%>
      </div>
    </div>
    <hr />
    <%= render partial:"comments/form", locals:{post:comment.post, parent:comment} %>

    <div class="sub-comments">
      <%=  render comment.comments%>
    </div>
  </div>
</div>
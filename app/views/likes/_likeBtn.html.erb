

<div id="testing">
    <div id="post_comment_<%=likeable.id%>">
        <%= likeable.likes.count%> likes
    </div>
    <div id="likecount_<%=likeable.id%>_<%=likeable.user.id %>">
        <% like = current_user.likes.find_by(likeable:likeable)%>

        <%if like.nil?%>
            <%= form_tag( "/likes" , remote: true) do |f| %>
                <input type="hidden" name="like[likeable_id]" value="<%= likeable.id%>">
                <input type="hidden" name="like[likeable_type]" value="<%= likeable.class.to_s%>">

                <input type="submit" value="like Me">
            <% end %>
            <%else%>
                <%= form_tag(like_path(like) , remote: true) do |f| %>

                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" value="Unlike">
            <% end %>
        <%end%>
    <div>
</div>
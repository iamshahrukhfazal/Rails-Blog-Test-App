<div class="d-flex justify-content-center">

     
       <%if current_user.role === "user"%>
          <input id="searchInput" onkeyup="test()"  class="searchposts mr-1" type="text" name="search" placeholder="Search..">

          <button type="button" class="btn btn-primary flex justify-center w-80" data-toggle="modal" data-target="#exampleModalCenter">
            Create New Post
          </button>
          <%else%>
        <%end%>     
</div>
<%if current_user.role==="user"%>
          <!-- Modal -->
          <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= render partial: "form", locals:{post:@post}%>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
<%end%>

 <div id="post_containor">
    <%if current_user.role === "moderator"%>
        <%= render @posts.where(status: "unpublished").order(updated_at: :desc)%> 
    <%else%>
       <div id="postSeachByUser">
               <%= render @posts.where(status: "published").order(updated_at: :desc)%> 
       </div>
    <%end%>
 </div>

<%if current_user.role === "user"%>
  <div class="d-flex justify-content-center"> <%== pagy_nav(@pagy) %></div>

<%end%>